<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProductDetailActivity" >

    <ScrollView
        android:id="@+id/scrrllView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_store"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/img_store"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tf_resultStoreName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/img_store"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tfInfo_stime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tf_resultStoreName"
                android:layout_alignLeft="@id/img_store"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins"
                android:text="운영시간"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tf_stime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tf_resultStoreName"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_alignRight="@id/img_store"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tfInfo_storeTellNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tfInfo_stime"
                android:layout_alignLeft="@id/img_store"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins"
                android:text="전화번호"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tf_storeTellNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tfInfo_stime"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignRight="@id/img_store"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tfInfo_storeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tfInfo_storeTellNum"
                android:layout_alignLeft="@id/img_store"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins"
                android:text="주소"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tf_storeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tfInfo_storeTellNum"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignRight="@id/img_store"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_below="@id/tfInfo_storeTellNum"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:background="#00000000"
                android:src="@drawable/map" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>